@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-6 offset-3 form">
        <h3>Login</h3>
        @if (TempData["InvalidCredentials"] != null)
        {
            <div class="alert alert-danger" role="alert">
                Could not validate your credentials... Please try again!
            </div>
        }
        <form asp-action="Login" asp-controller="Auth">
            <div class="form-group">
                <input type="text" class="form-control" name="username" placeholder="Your Username *" value="" autofocus />
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Your Password *" value="" />
            </div>
            <div class="form-group text-center">
                <input type="submit" class="btnSubmit" value="Login" />
            </div>
        </form>
    </div>
</div>

